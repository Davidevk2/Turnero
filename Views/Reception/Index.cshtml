@{
    ViewData["Ttitle"] = "Home";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Usuarios</h3>
                </div>
                <div class="card-footer">
                    <a asp-controller="" asp-action="">Gestionar usuarios &rightarrow;</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Modulos</h3>
                </div>
                <div class="card-footer">
                    <a asp-controller="" asp-action="">Gestionar Modulos &rightarrow;</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Turnos</h3>
                </div>
                <div class="card-footer">
                    <a asp-controller="" asp-action="">Gestionar Turnos &rightarrow;</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <table class="table">
                <thead>
                    <tr>
                        <th>Turnos</th>
                    </tr>
                    <tr>
                        <th>Estado</th>
                        <th>Total</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2>Atender</h2>
                    <form asp-controller="Reception" asp-action="Atencion" method="post">
                        <div class="form-group">
                            <label for="">Modulo:</label>
                            <select name="" id="" class="form-control form-select">
                                @foreach(var modulo in Model){
                                <option value="@modulo.Id">@modulo.Nombre</option>
                            }
                                
                            </select>

                        </div><br>
                        <div class="form-group">
                                <button class="btn btn-primary col-md-6">Atender</button>


                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>