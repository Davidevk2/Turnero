@{
    ViewData["Title"] = "Modulos";
}

<div class="container">
    <div class="row">

    </div>
 
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                     <h3 class="card-title">Registrar Modulo</h3>
                    <form action="">
                        <div class="form-group">
                            <label for="Nombre"></label>
                            <input name="Nombre" class="form-control" placeholder="Ingrese nombre del modulo">
                        </div>
                        <div class="form-group">
                            <label for="Estado"></label>
                            <select name="" id="" name="Estado" class="form-select">
                                <option value="Habilitado">Habilitado</option>
                                <option value="nhabilitado">Inhabilitado</option>
                            </select>
                        </div><br>
                        <div class="form-group">
                        <button class="btn btn-success">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="d-flex">
                    <div class="col float-start">
                        <h1>Lista Modulos</h1>
                    </div>
                    <div class="col float-end">
                        
                    </div>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @{int countRecord = 1;}
                    @foreach(var item in Model){
                        <tr>
                            <td>@countRecord</td>
                            <td>@item.Id</td>
                            <td>@item.Nombre</td>
                            <td>@item.Estado</td>
                            <td><a href="" class="btn btn-sm btn-primary">Editar</a>
                                <a href="" class="btn btn-sm btn-danger">Deshabilitar</a>
                            </td>
                        </tr>
                        countRecord++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>