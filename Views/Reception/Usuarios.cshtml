@{
    ViewData["Title"] = "Modulos";
}

<div class="container">
    <div class="row">

    </div>
 
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                     <h3 class="card-title">Registrar Usuario</h3>
                    <form action="">
                        <div class="form-group">
                            <label for="Nombre">Nombre</label>
                            <input name="Nombre" class="form-control" placeholder="Ingrese nombre del usaurio">
                        </div>
                         <div class="form-group">
                            <label for="Nombre">Correo:</label>
                            <input name="Correo" class="form-control" placeholder="Ingrese nombre del usaurio">
                        </div>
                        <div class="form-group">
                            <label for="Nombre">Contrase√±a:</label>
                            <input name="Password" class="form-control" placeholder="Ingrese nombre del usaurio">
                        </div>
                        <br>
                        <div class="form-group">
                        <button class="btn btn-success">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="d-flex">
                    <div class="col float-start">
                        <h1>Lista Usuarios</h1>
                    </div>
                    <div class="col float-end">
                        
                    </div>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Fecha Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @{int countRecord = 1;}
                    @foreach(var item in Model){
                        <tr>
                            <td>@countRecord</td>
                            <td>@item.Id</td>
                            <td>@item.Nombre</td>
                            <td>@item.Correo</td>
                            <td>@item.FechaRegistro</td>
                            <td><a href="" class="btn btn-sm btn-primary">Editar</a>
                                <a href="" class="btn btn-sm btn-danger">Deshabilitar</a>
                            </td>
                        </tr>
                        countRecord++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>